@page "/income"

<MudContainer Class="mt-2">

    <MudTabs Position="Position.Start" PanelClass="d-block pa-2" KeepPanelsAlive="true">
        <MudTabPanel Text="Standard Breakdown" ToolTip="Use standard precentages and cutoffs">
            <StandardBreakdownControl />
        </MudTabPanel>

        <MudTabPanel Text="Custom Breakdown" ToolTip="Use custom percentage values">
            <CustomPercentControl />
        </MudTabPanel>

        <MudTabPanel Text="Balance Budget" ToolTip="Check bank = budget balance">
            <BalancingControl />
        </MudTabPanel>
    </MudTabs>

</MudContainer>
